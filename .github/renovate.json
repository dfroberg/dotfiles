{
    "enabled": true,
    "semanticCommits": "enabled",
    "labels": ["renovatebot"],
    "commitBody": "Signed-Off-by: Danny Froberg <danny@froberg.org>",
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate Dashboard",
    "suppressNotifications": ["prIgnoreNotification"],
    "rebaseWhen": "conflicted",
    "automerge": true,
    "ignoreTests": true,
    "extends": [
        ":enableRenovate",
        "config:base",
        ":disableRateLimiting",
        ":dependencyDashboard",
        ":semanticCommits",
        ":separatePatchReleases",
        "docker:enableMajor",
        "github>aquaproj/aqua-renovate-config:installer-script#0.1.8(.chezmoiscripts/.*install-aqua\\.sh\\.tmpl)",
        "github>aquaproj/aqua-renovate-config:file#0.1.8(dot_config/aqua\\.yaml\\.tmpl)",
        "github>aquaproj/aqua-renovate-config:golang-go#0.1.8(dot_config/aqua\\.yaml\\.tmpl)",
        "github>dfroberg/dotfiles//.github/renovate/autoMerge",
        "github>dfroberg/dotfiles//.github/renovate/labels",
        "github>dfroberg/dotfiles//.github/renovate/semanticCommits"
    ],
    "regexManagers": [
        {
            "fileMatch": ["\\.chezmoiscripts\\/.+\\.sh\\.tmpl$"],
            "matchStrings": [
                "# renovate: depName=(?<depName>.*) datasource=(?<datasource>.*)\\n\\s*current_\\w+_version=(?<currentValue>.+)\\b"
            ]
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": "kubernetes-sigs/kustomize",
            "versioning": "regex:^\\w+\\/v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
        }
    ]
}
