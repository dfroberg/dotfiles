{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash
echo -e "\033[0;32m>>>>> Begin Setting Up Custom Packages <<<<<\033[0m"
# Ensure environment is good
ulimit -u 8192
# Global
sudo apt install -y pass git fd-find fzf bat zoxide curl xz-utils
# Local
curl -sS https://webinstall.dev/webi | bash
curl -sS https://webinstall.dev/keypairs | bash

# Starship
curl -sS https://starship.rs/install.sh | sh
# WakaTime
# python3 -c "$(wget -q -O - https://raw.githubusercontent.com/wakatime/vim-wakatime/master/scripts/install_cli.py)"
# Brew packages
export PATH=$PATH:/home/linuxbrew/.linuxbrew/bin/
export PATH=$PATH:/home/linuxbrew/.linuxbrew/sbin/
brew install gh
brew install kubectl
brew install kubectx
brew install kustomize
brew install derailed/k9s/k9s
brew install aws-vault
brew install awscli
brew install eksctl
brew install ripgrep
brew install exa
brew install shellcheck
brew install shfmt
brew install yq
brew install xz
brew install tmux
brew install gcc
brew install fisher
brew install go
brew install go-task/tap/go-task
brew install wakatime-cl
brew install pulumi
brew install terraform
brew install tfenv
brew install ansible
brew install clusterctl
brew tap siderolabs/talos
brew install --cask --no-quarantine talosctl

# Add aditional modules
export PATH="/home/$USER/.local/opt/go/bin:$PATH"
export PATH="/home/$USER/go/bin:$PATH"
go install golang.org/x/tools/gopls@latest
echo -e "\033[0;32m>>>>> End Setting Up Custom Packages <<<<<\033[0m"
