{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash
# Global
sudo apt install -y ripgrep pass fish git fd-find fzf bat zoxide curl xz-utils 
# Local
curl -sS https://webinstall.dev/yq | bash
curl -sS https://webinstall.dev/kubectx | bash
curl -sS https://webinstall.dev/kubens | bash
curl -sS https://webinstall.dev/k9s | bash
curl -sS https://webinstall.dev/gh | bash
curl -sS https://webinstall.dev/exa | bash
sh -c "$(curl --location https://taskfile.dev/install.sh)" -- -d -b $HOME/.local/bin
curl -sS https://webinstall.dev/brew | bash
curl -sS -L -o /tmp/shellcheck-v0.8.0.linux.x86_64.tar.xz https://github.com/koalaman/shellcheck/releases/download/v0.8.0/shellcheck-v0.8.0.linux.x86_64.tar.xz && \
cd /tmp && tar -xvf /tmp/shellcheck-v0.8.0.linux.x86_64.tar.xz && \
cp /tmp/shellcheck-v0.8.0/shellcheck $HOME/.local/bin/
curl -sS https://starship.rs/install.sh | sh
# Fisher and packages
curl -sSL https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish | source
fisher install jorgebucaran/fisher
fisher install patrickf1/fzf.fish
fisher install nickeb96/puffer-fish
fisher install budimanjojo/tmux.fish
fisher install jorgebucaran/autopair.fish
fisher install gazorby/fish-abbreviation-tips
# WakaTime
python3 -c "$(wget -q -O - https://raw.githubusercontent.com/wakatime/vim-wakatime/master/scripts/install_cli.py)"
# 1pass
curl -sL -o /tmp/op_linux_amd64_v2.4.1.zip https://cache.agilebits.com/dist/1P/op2/pkg/v2.4.1/op_linux_amd64_v2.4.1.zip && \
cd /tmp && unzip op_linux_amd64_v2.4.1.zip && cp op $HOME/.local/bin && rm op* && cd

# Brew packages
brew install aws-vault

